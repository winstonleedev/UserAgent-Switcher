{
  "manifest_version": 2,
  "name": "Winston's User-Agent Switcher",
  "version": "1.0.2",
  "description": "Whitelist-only user-agent spoofing with toolbar toggle",
  "browser_specific_settings": {
    "gecko": {
      "id": "{bdc970ee-2e02-4cd7-aa85-07b91634c87c}",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "permissions": [
    "storage",
    "<all_urls>",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],
  "icons": {
    "512": "icons/on/512.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/on/512.png"
  },
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "all_frames": true,
      "run_at": "document_start",
      "match_about_blank": true,
      "matches": [
        "*://*/*"
      ],
      "js": [
        "inject.js"
      ]
    }
  ]
}