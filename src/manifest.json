{
  "manifest_version": 2,
  "name": "User-Agent Switcher (Whitelist)",
  "version": "1.0.0",
  "description": "Whitelist-only user-agent spoofing with toolbar toggle",
  "permissions": [
    "storage",
    "<all_urls>",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],
  "icons": {
    "512": "icons/on/512.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/on/512.png"
  },
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "all_frames": true,
      "run_at": "document_start",
      "match_about_blank": true,
      "matches": [
        "*://*/*"
      ],
      "js": [
        "inject.js"
      ]
    }
  ]
}